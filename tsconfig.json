{
  "compilerOptions": {
    "module": "commonjs",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "target": "es6",
    "noImplicitAny": true,
    "moduleResolution": "node",
    "sourceMap": true,
    "outDir": "dist",
    "baseUrl": ".",
    "paths": {
      "@config/*": ["src/config/*"],
      "@domain/*": ["src/entities/domain/*"],
      "@dto/*": ["src/entities/dto/*"],
      "@enums/*": ["src/entities/enums/*"],
      "@exceptions/*": ["src/entities/exceptions/*"],
      "@interfaces/*": ["src/entities/interfaces/*"],
      "@infra/*": ["src/infra/*"],
      "@routes/*": ["src/routes/*"],
      "@services/*": ["src/services/*"]
    }
  },
  "include": ["src/**/*", "src/index.d.ts"]
}
